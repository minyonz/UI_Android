<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/searchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"/>
            <RadioButton
                android:id="@+id/searchMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공"/>

        </RadioGroup>

        <EditText
            android:layout_weight="2"
            android:id="@+id/edtUpdateSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btnUpdateSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="찾기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번 :"
            android:textSize="20dp"/>
        <EditText
            android:focusableInTouchMode="false"
            android:layout_margin="3dp"
            android:id="@+id/updateNum"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 :"
            android:textSize="20dp"/>
        <EditText
            android:layout_margin="3dp"
            android:id="@+id/updateName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학년 :"
            android:textSize="20dp"/>
        <EditText
            android:layout_margin="3dp"
            android:id="@+id/updateYear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별 :"
            android:textSize="20dp"/>

        <RadioGroup
            android:id="@+id/updateRdoGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/updateMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"/>
            <RadioButton
                android:id="@+id/updateFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공 :"
            android:textSize="20dp"/>
        <EditText
            android:layout_margin="3dp"
            android:id="@+id/updateMajor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점수 :"
            android:textSize="20dp"/>
        <EditText
            android:layout_margin="3dp"
            android:id="@+id/updateScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnUpdateCancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="취소"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btnUpdateFin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="수정완료"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updateTxt"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색 결과 입니다."
            android:textSize="25dp"
            android:background="#F8C471"
            android:textColor="#A04000"/>
        <TextView
            android:id="@+id/updateTxt2"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정을 원하는 학생을 클릭해 주세요."
            android:textSize="15dp"/>

        <ListView
            android:id="@+id/updateListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>